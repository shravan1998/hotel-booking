<html>
    <head>
        <title>Hotel Management</title>
        <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
        
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/hotel-rooms">Hotel Management</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <div class="navbar-nav">
                    <a class="nav-item nav-link " href="/hotel-rooms">Home</a>
                      <a class="nav-item nav-link active" href="/your-hotels">Your Rooms <span class="sr-only">(current)</span></a>
                      </div>
              <span class="navbar-text">
                <button type="button" class="btn btn-danger" onclick="location.href='/login'">Log Out</button>
              </span>
            </div>
          </nav>
          <br>
          <div class="container">
            <br>
            <div class="container">
            <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Type</th>
                  <th scope="col">Cost</th>
                 <th scope="col">Cancellation</th>
                </tr>
              </thead>
              <tbody>
                  <% hotel.forEach(function (x) {%> 
                <tr>
                 
                  <td><%= x.type %></td>
                  <td><%= x.cost  %> </td>
                  <td>
                      <button class="btn btn-danger" onclick="location.href='/cancel/<%= x.hotel_rid %>'">
                      Cancel
                      </button>
                  </td>
                </tr>
              <% }); %> 
              </tbody>
            </table>
        </div>  
         
    </body>
</html>